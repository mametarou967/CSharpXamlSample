<Window x:Class="CSharpXamlSample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:CSharpXamlSample.ViewModels"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="500" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>

        <!-- テキスト表示枠 -->
        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2" Height="152">
            <ScrollViewer x:Name="MyScrollViewer"
                          VerticalScrollBarVisibility="Hidden"
                          PreviewMouseLeftButtonDown="ScrollViewer_PreviewMouseLeftButtonDown"
                          PreviewMouseMove="ScrollViewer_PreviewMouseMove"
                          PreviewMouseLeftButtonUp="ScrollViewer_PreviewMouseLeftButtonUp"
                          Height="152"
                          Padding="0,4,0,4">
                <StackPanel x:Name="TextPanel" />
            </ScrollViewer>
        </Border>

        <!-- スクロールバーと上下ボタン -->
        <Grid Grid.Column="1" Height="152">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Button Content="▲"
                    Grid.Row="0"
                    Click="UpButton_Click"
                    PreviewMouseLeftButtonDown="UpButton_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="ScrollButton_PreviewMouseLeftButtonUp"
                    LostMouseCapture="ScrollButton_LostMouseCapture"/>

            <Grid Grid.Row="1" Background="LightGray" MouseDown="ScrollTrack_MouseDown">
                <Rectangle x:Name="Slider"
                           Fill="DarkGray"
                           VerticalAlignment="Top"
                           Height="30"
                           Margin="5,0"
                           MouseDown="Slider_MouseDown"
                           MouseMove="Slider_MouseMove"
                           MouseUp="Slider_MouseUp"/>
            </Grid>

            <Button Content="▼"
                    Grid.Row="2"
                    Click="DownButton_Click"
                    PreviewMouseLeftButtonDown="DownButton_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="ScrollButton_PreviewMouseLeftButtonUp"
                    LostMouseCapture="ScrollButton_LostMouseCapture"/>
        </Grid>
    </Grid>
</Window>
